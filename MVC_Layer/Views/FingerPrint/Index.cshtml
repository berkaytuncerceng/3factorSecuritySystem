@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Parmak İzi Tanıma</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/FingerprintValidation.css" rel="stylesheet"> <!-- Dış CSS dosyasını dahil ettik -->
</head>
<body>
    <div class="container">
        <h1>Parmak İzi Tanıma</h1>

        <!-- Parmak izi simgesi animasyonu -->
        <div class="fingerprint-container">
            <div class="fingerprint-icon">
                <i class="bi bi-fingerprint"></i> <!-- Bootstrap Icons kullanarak parmak izi simgesi ekliyoruz -->
            </div>

            <!-- Parmak izi okuma animasyonu -->
            <div class="fingerprint-reading">
                <div class="fingerprint-circle"></div>
            </div>

            <!-- Kullanıcıya durum bilgisi gösteren alan -->
            <div class="message">
                <p>Parmak izinizi taranıyor...</p>
            </div>

            <!-- Parmak izi okuma butonu -->
            <button class="btn btn-custom" id="startScanBtn">Tarama Başlat</button>
        </div>

    </div>

    <script>
        // Parmak izi tarama butonuna tıklanıldığında animasyon başlatma
        document.getElementById("startScanBtn").addEventListener("click", function () {
            alert("Parmak izi tarama başlatıldı. Lütfen parmağınızı sensöre koyun.");
            document.querySelector(".message p").innerText = "Parmak iziniz başarıyla taranıyor...";
        });
    </script>

    <!-- Bootstrap Icons için gerekli CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</body>
</html>
